#!/bin/bash
set -e

if id "lfs" >/dev/null 2>&1; then
	echo "El usuario 'lfs' ya existe."
    	exit
else
    	groupadd lfs
    	useradd -s /bin/bash -g lfs -m -k /dev/null lfs
    	cp $1/bash_profile /home/lfs/.bash_profile
    	chown lfs:lfs /home/lfs/.bash_profile
    	cp $1/bashrc /home/lfs/.bashrc
    	chown lfs:lfs /home/lfs/.bashrc
    	echo "Introduca la contrase√±a para el numevo usuario 'lfs'"    
    	passwd lfs
fi
